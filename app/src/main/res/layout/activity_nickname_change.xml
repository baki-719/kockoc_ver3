<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/course_title"
        android:drawablePadding="10dp"
        android:text="별명을 입력해 주세요."
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/nickname_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/above"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9.5"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:singleLine="true"
            android:padding="5dp"
            android:background="@drawable/bg_rectangle_shape_silver"/>

        <Button
            android:id="@+id/btn_nickname_change_dup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:text="중복 확인"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/mainBgColor" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_nickname_change_confirm"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_change"
        android:background="#E2695A"
        android:text="확인"
        android:textStyle="bold"
        android:textColor="@color/white"/>


</RelativeLayout>